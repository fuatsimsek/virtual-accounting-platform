# Copy this file to .env and fill in your values.
# Default logins (created automatically if DB is empty):
#   Admin: admin@example.com / admin
#   User:  user@example.com / user

# Required for production; optional for local dev (a default is used)
SECRET_KEY=enter-your-secret-key-here

# Database URL (e.g. sqlite for local: sqlite:///app.db)
DATABASE_URL=sqlite:///app.db
# MSSQL example:
# DATABASE_URL=mssql+pyodbc://sa:YourPassword@localhost/SanalMuhasebeDB?driver=ODBC+Driver+17+for+SQL+Server

# Optional: mail (leave empty to disable)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SENDER_NAME=
MAIL_SENDER_EMAIL=

# Optional: site URL (for links in emails)
BASE_URL=http://127.0.0.1:5000

# Optional: Telegram, Google Calendar, OAuth (leave empty to disable)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_CALENDAR_ID=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Optional: payment / IBAN
IBAN=
IBAN_ACCOUNT_HOLDER=
IBAN_BANK_NAME=
IBAN_PAYMENT_NOTE=

MAX_CONTENT_LENGTH=10485760
